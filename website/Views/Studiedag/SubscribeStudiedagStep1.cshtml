@using bvlf_v2.Controllers
@using bvlf_v2.Helpers
@model bvlf_v2.Models.MemberProfileViewModel
@{
    var title = string.Format("{0} {1}", library.GetDictionaryItem("Studiedag_inschrijven_step1"), library.GetDictionaryItem("Studiedag_inschrijven_step1_title"));
}
<div id="SubscriptionFormContent">


